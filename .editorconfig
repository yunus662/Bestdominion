# .editorconfig - Top-most EditorConfig file for the revised project

# Indicate that this is the root file
root = true

[*]
# Set the default charset and indentation style for all files
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
# Markdown files typically should not trim trailing whitespace
trim_trailing_whitespace = false
